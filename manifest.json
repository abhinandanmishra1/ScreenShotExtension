
  { 
    "manifest_version": 2,
    "name": "Screenshot",
    "description": "This extension helps to record screen as well as to download full page screenshot.",
    "version": "1.0.0",
    
    "browser_action": {
      "default_icon": "logo.png",
      "default_popup": "popup.html"
    },
    "content_security_policy": "default-src 'self'; img-src 'self' data:; style-src 'self'",
    "permissions": [
     "activeTab"
  ]
  }
